{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "off"
      }
    },
    "ignore": [
      "node_modules/**",
      ".next/**",
      "src/components/ui/**",
      "src/app/**",
      "src/hooks/**",
      "src/context/**",
      "src/lib/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      "node_modules/**",
      ".next/**",
      "src/components/ui/**",
      "src/app/**",
      "src/hooks/**",
      "src/context/**",
      "src/lib/**"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "build",
      ".git",
      "reports",
      "*.json",
      "*.md",
      "*.lock",
      "src/components/ui/**",
      "src/app/**",
      "src/hooks/**",
      "src/context/**",
      "src/lib/**"
    ]
  }
}
